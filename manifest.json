{
  "manifest_version": 2,

  "name": "Magic Wall",
  "description": "This extension changes chrome wallpaper randomly",
  "version": "1.0",
  "author": "Akash Deep Singhal",

  "background":{
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Change the wallpaper"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}